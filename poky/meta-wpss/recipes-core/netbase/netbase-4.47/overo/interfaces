# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)
 
# The loopback interface
auto lo
iface lo inet loopback

#auto wlan0
allow-hotplug wlan0
iface wlan0 inet manual
#   wpa-driver wext
#   wpa-conf /etc/wpa_supplicant.conf
   pre-up /usr/sbin/wpa_supplicant -B -P /var/run/wpa_supplicant.wlan0.pid -i wlan0 -c /etc/wpa_supplicant/wpa_supplicant.conf -Dwext
   up /sbin/udhcpc -i wlan0 -b -p /var/run/udhcpc.wlan0.pid
   up /usr/sbin/wpa_cli -a /sbin/wpa_action -B -P /var/run/wpa_cli.wlan0.pid
   up /bin/systemctl  start network.target
   down kill `cat /var/run/udhcpc.wlan0.pid`
   down kill `cat /var/run/wpa_cli.wlan0.pid`
   down kill `cat /var/run/wpa_supplicant.wlan0.pid`
   down /bin/systemctl  stop network.target
